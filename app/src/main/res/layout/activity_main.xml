<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_azul"
    android:orientation="vertical"
    tools:context=".AppsLoginActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/googleplay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:drawableStart="@drawable/round_person"
        android:hint="UsuÃ¡rio"
        android:inputType="textPersonName"
        android:maxLength="50"
        android:textColorHint="@color/black" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:drawableStart="@drawable/round_email"
        android:hint="Email"
        android:inputType="textPassword"
        android:maxLength="50"
        android:textColorHint="@color/black" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:drawableStart="@drawable/round_lock"
        android:hint="Digite sua senha"
        android:inputType="textPassword"
        android:maxLength="50"
        android:textColorHint="@color/black" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:drawableStart="@drawable/round_lock"
        android:hint="Confirme sua senha"
        android:inputType="textPassword"
        android:maxLength="50"
        android:textColorHint="@color/black" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#094778"
        android:text="Cadastrar"
        app:cornerRadius="10dp" />

</LinearLayout>

